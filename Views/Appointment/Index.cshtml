@model DentoApp.Models.AppointmentsViewModel

<h1>Appointments</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model.Appointments)
        {
            <tr>
                <td>@appointment.Id</td>
                <td>@appointment.Notes</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = appointment.Id })">Edit</a>
                    <a href="@Url.Action("Delete", new { id = appointment.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
