@using DentoApp.Models
@using DentoApp.Helpers
@model DentoApp.Models.AppointmentsViewModel

@{
    ViewData["Title"] = "Appointments";
}

<!-- CRUD ButonlarÄ± -->
<div class="mb-3">
    <a class="btn btn-success" href="@Url.Action("Create")">Add New Appointment</a>
</div>

<h1>Appointments</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Patient</th>
            <th>Dentist</th>
            <th>Treatment</th>
            <th>Notes</th>
            <th>Appointment Date</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model.Appointments)
        {
            <tr>
                <td>@appointment.Id</td>
                <td>@appointment.Patient?.Name</td>
                <td>@appointment.Dentist?.Name</td>
                <td>@appointment.Treatment?.TreatmentType</td>
                <td>@appointment.Notes</td>
                <td>@appointment.AppointmentDate.ToString("yyyy-MM-dd HH:mm")</td>
                 <td>
                    <a href="@Url.Action("Edit", new { id = appointment.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = appointment.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
