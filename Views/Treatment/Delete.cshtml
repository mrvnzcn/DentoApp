@model DentoApp.Entity.Treatment

@{
    ViewData["Title"] = "Delete Treatment";
}

<h1>Delete Treatment</h1>

<div>
    <h4>Are you sure you want to delete this treatment  ?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Dentist</dt>
        <dd class="col-sm-10">@Model.Dentist?.Name</dd>

        <dt class="col-sm-2">Patient</dt>
        <dd class="col-sm-10">@Model.Patient?.Name</dd>

        <dt class="col-sm-2">Treatment Type</dt>
        <dd class="col-sm-10">@Model.TreatmentType</dd>

        <dt class="col-sm-2">Treatment Description</dt>
        <dd class="col-sm-10">@Model.TreatmentDescription</dd>

        <dt class="col-sm-2">Treatment Date</dt>
        <dd class="col-sm-10">@Model.TreatmentDate</dd>

        <dt class="col-sm-2">Treatment Duration</dt>
        <dd class="col-sm-10">@Model.TreatmentDuration</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
