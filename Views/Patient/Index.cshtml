@model DentoApp.Models.PatientsViewModel
@{
    ViewData["Title"] = "Patients";
}
<h1>Patients</h1>

<!-- CRUD ButonlarÄ± -->
<div class="mb-3">
    <a class="btn btn-success" href="@Url.Action("Create")">Add New Patient</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
            <th>Address</th>
            <th>Age</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Gender</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model.Patients)
        {
            <tr>
                <td>@patient.Id</td>
                <td>@patient.Name</td>
                <td>
                    <a class="btn btn-warning" href="@Url.Action("Edit", new { id = patient.Id })">Edit</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", new { id = patient.Id })">Delete</a>
                </td>
                <td>@patient.Address</td>
                <td>@patient.Age</td>
                <td>@patient.PhoneNumber</td>
                <td>@patient.Email</td>
                <td>@patient.Gender</td>
            </tr>
        }
    </tbody>
</table>
